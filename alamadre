<!DOCTYPE html><html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galería Rule34</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; }
        input { margin: 10px; padding: 5px; }
        button { padding: 5px 10px; }
        .gallery { display: flex; flex-wrap: wrap; justify-content: center; }
        .gallery img { max-width: 200px; margin: 10px; border-radius: 10px; }
    </style>
</head>
<body>
    <h1>Galería Rule34</h1>
    <input type="text" id="search" placeholder="Ingrese etiquetas">
    <button onclick="fetchImages()">Buscar</button>
    <div class="gallery" id="gallery"></div><script>
    async function fetchImages() {
        const query = document.getElementById('search').value;
        if (!query) return alert('Ingrese una etiqueta');
        
        const url = `https://api.rule34.xxx/index.php?page=dapi&s=post&q=index&json=1&tags=${encodeURIComponent(query)}`;
        try {
            const response = await fetch(url);
            const images = await response.json();
            const gallery = document.getElementById('gallery');
            gallery.innerHTML = '';
            
            images.forEach(img => {
                const imgElement = document.createElement('img');
                imgElement.src = img.file_url;
                imgElement.alt = "Imagen de Rule34";
                gallery.appendChild(imgElement);
            });
        } catch (error) {
            alert('Error al cargar imágenes');
        }
    }
</script>

</body>
</html>
